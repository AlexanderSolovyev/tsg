.panel.panel-default
  %table.table 
    %tr.info
      %td Заголовок
      %td Сообщение
      %td Дата
      %td Создано
      %td Изменено
      %td
    - @news.each do |new| 
      %tr
        %td
          = new.title
        %td 
          = new.description
        %td 
          = new.date
        %td
          = new.created_at
        %td
          = new.updated_at
        %td 
          = link_to content_tag('span','',class: 'glyphicon glyphicon-pencil'), edit_admin_news_path(new) 
          = link_to content_tag('span','',class: 'glyphicon glyphicon-remove'),admin_news_path(new), method: :delete, data: { confirm: 'Ты уверен ?' } 

= link_to 'Добавить запись', new_admin_news_path
