.panel.panel-default
  .bg-primary
    .panel-body
      .text-center
        %h3
          %span.glyphicon.glyphicon-calendar
            Товарищество собственников жилья  'Гвардейская площадь 10'
.navbar.navbar-default
  .navbar-header
    %button{:type => 'button', :class => 'navbar-toggle', :data => {:toggle  => 'collapse', :target => '#menu' }}
      %span.sr-only
        Открыть навигацию
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
  .collapse.navbar-collapse#menu
    %ul.nav.navbar-nav
      %li 
        = link_to content_tag('span',' Новости и обьявления',class: 'glyphicon glyphicon-comment'), news_index_path
      %li 
        = link_to content_tag('span',' Информация о ТСЖ',class: 'glyphicon glyphicon-list-alt'), info_index_path
      %li 
        = link_to content_tag('span', ' Документы и отчетность',class: 'glyphicon glyphicon-folder-open'), docs_path 
    .collapse.navbar-collapse.navbar-right
      %ul.nav.navbar-nav
        - if user_signed_in?
          %li
            = link_to current_user.email, destroy_user_session_path, method: :delete
          %li
            = link_to 'Выйти', destroy_user_session_path, method: :delete
        - else
          %li
            = link_to 'Войти', new_user_session_path
          %li 
            = link_to 'Зарегистрироваться', new_user_registration_path
- if notice.present? or alert.present?
  .alert.alert-danger
    = notice
    = alert
