<div class='container'>

    <h1>TSG Gvardeyskaya 10</h1>
  <div class='row'>
    
    <%= render 'navbar' %> 
  </div>
  <div class='container'>
    <div>
    <%= link_to 'New', new_news_path %>
    </div>
    <% @news.each do |new| %>
    <%= link_to 'Edit', edit_news_path(new) %>
    <%= link_to 'Destroy', new, method: :delete, data: { confirm: 'Are you sure ?' } %>
    <div class='panel panel-info'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= new.title %></h3>
      </div>
      <div class='panel-body'>
      <%= new.description %>
      </div>
    </div>
    <% end %>
</div>
