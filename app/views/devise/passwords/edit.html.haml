.container
  .row
    .col-md-4
      .panel.panel-success
        .panel-heading
          Меняем пароль 
        .panel-body
          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| 
            = f.input :reset_password_token, as: :hidden 
            = f.full_error :reset_password_token 
            .form-inputs
              = f.input :password, label: "Новый пароль", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) 
              = f.input :password_confirmation, label: "Повтори пароль", required: true 

            .form-actions
              = f.button :submit, "Изменить пароль" 
            %br
            = render "devise/shared/links" 
